<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/searchLoadingFragment"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.search.SearchLoadingFragment">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/init_load_img"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="256dp"
        android:background="@drawable/emoji_writing_hand_gif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/score_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="점수를 계산 중이에요!"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/pretendard_regular"
        app:layout_constraintTop_toBottomOf="@+id/init_load_img"
        android:gravity="center"
        android:layout_marginTop="4dp"
        />

    <ProgressBar
        android:id="@+id/score_load_progessbar"
        android:layout_width="200dp"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@+id/score_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progressTint="@color/darkmint"
        android:layout_marginTop="2dp"
        />

    <TextView
        android:id="@+id/score_load_progress_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/pretendard_regular"
        android:gravity="center"
        android:text="퍼센트"
        app:layout_constraintTop_toBottomOf="@+id/score_load_progessbar"
        android:layout_marginTop="2dp"
        />

    <ImageView
        android:id="@+id/score_icon_hanple"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_hanple"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="6dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>