<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.onboarding.UserInfoActivity">
    <LinearLayout
        android:id="@+id/ll_user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_back">

        <EditText
            android:id="@+id/et_email"
            style="@style/etGeneral"
            android:hint="@string/onboarding_email_hint" />
        <EditText
            android:id="@+id/et_password"
            style="@style/etGeneral"
            android:layout_marginTop="12dp"
            android:hint="@string/onboarding_password_hint" />
        <EditText
            android:id="@+id/et_username"
            style="@style/etGeneral"
            android:layout_marginTop="12dp"
            android:hint="@string/onboarding_username_hint" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_save"
        style="@style/btnGeneral1st"
        android:text="@string/onboarding_sign_up_btn"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/ll_user_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cancel"
        style="@style/btnGeneral1st"
        android:text="@string/onboarding_sign_up_btn"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btn_save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>